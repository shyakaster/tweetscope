
<div class="container">
  <div class="row">
    <p id="notice"><%= notice %></p>
    <div class="col-sm-8 col-sm-offset-2">
      <h2>Listing Keywords</h2>

      <table class="table table-striped">
        <thead>
        <tr>
          <th>Keyword</th>
          <th colspan="3"></th>
        </tr>
        </thead>

        <tbody>
        <% @keywords.each do |keyword| %>
            <tr>
              <td><%= image_tag(keyword.image.thumb.url, width: '100') if keyword.image? %></td>
              <td><%= keyword.keyword %></td>
              <td><%= link_to 'Show', keyword, class:'btn btn-primary' %></td>
              <td><%= link_to 'Edit', edit_keyword_path(keyword), class:'btn btn-warning' %></td>
              <td><%= link_to 'Destroy', keyword, method: :delete, data: { confirm: 'Are you sure?' }, class:'btn btn-danger' %></td>
            </tr>
        <% end %>
        </tbody>
      </table>

      <br>

      <%= link_to 'New Keyword', new_keyword_path, class:'btn btn-primary' %>
    </div>

  </div>


</div>
