<%= form_for @keyword,  html: { multipart: true } do |f| %>
  <% if @keyword.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@keyword.errors.count, "error") %> prohibited this keyword from being saved:</h2>

      <ul>
      <% @keyword.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">

    <%= f.label :keyword %><br>
    <%= f.text_field :keyword %>
  </div>
  <div class="field">
    <label>My Image</label>
    <%= image_tag(@keyword.image.thumb.url, width: '100') if @keyword.image? %>
    <%= f.file_field :image %>
    <%= f.hidden_field :image_cache %>
  </div>
  <div class="actions keyword-submit">
    <%= f.submit class:'btn btn-warning btn-lg' %>
  </div>
<% end %>
