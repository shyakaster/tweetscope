<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class=" show-page col-sm-8 col-sm-offset-2">
      <p><%= image_tag(@keyword.image.url) if @keyword.image? %></p>
      <p id="keyword">
        <strong>Keyword:  <%= @keyword.keyword %></strong>
      </p>
    </div>
      <div class="latest-tweets col-sm-8 col-sm-offset-2">
        <%= link_to 'Edit', edit_keyword_path(@keyword), class:'btn btn-warning btn-lg' %> |
        <%= link_to 'Back', keywords_path, class:'btn btn-primary btn-lg' %>
      </div>
    <div class="col-md-8 col-md-offset-2">
      <p id="paginate-tweets"><%= will_paginate @twitts, renderer: BootstrapPagination::Rails %></p>
    </div>

    <div class="latest-tweets col-sm-8 col-sm-offset-2">
      <h2>Latest Tweets(<%=@keyword.tweets.count%>)</h2>
      <ul>
        <%@keyword.tweets.each do |tweet|%>
            <li><img src="<%=tweet.user_image_url%>" width="30"> <%= tweet.user_screen_name%> : <%= tweet.tweet%></li>
        <%end%>
      </ul>
    </div>
  </div>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <p id="paginate-tweets"><%= will_paginate @twitts, renderer: BootstrapPagination::Rails %></p>
    </div>

  </div>
</div>