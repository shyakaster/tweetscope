<p id="notice"><%= notice %></p>
<div class="container">
  <div class="row">
    <div class=" show-page col-sm-8 col-sm-offset-2">
      <p><%= image_tag(@keyword.image.url) if @keyword.image? %></p>
      <p>
        <strong>Keyword:</strong>

        <%= @keyword.keyword %>
      </p>

      <%= link_to 'Edit', edit_keyword_path(@keyword), class:'btn btn-warning btn-lg' %> |
      <%= link_to 'Back', keywords_path, class:'btn btn-primary btn-lg' %>

    </div>
    <div class="latest-tweets col-sm-8 col-sm-offset-2">
      <h2>Latest Tweets(<%=@keyword.tweets.count%>)</h2>
      <ul>
        <%@keyword.tweets.each do |tweet|%>
            <li><%= tweet.user_screen_name%> : <%= tweet.tweet%></li>
        <%end%>
      </ul>
    </div>
  </div>
</div>